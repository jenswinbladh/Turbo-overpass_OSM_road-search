(
  {{geocodeArea:Denmark}}->.searchArea;
     way["highway"="primary"][maxspeed!~"."]["maxspeed:forward"!~"."](area.searchArea);
     way["highway"="secondary"][maxspeed!~"."]["maxspeed:forward"!~"."](area.searchArea);
);
(._;>;);
out body;
>;

